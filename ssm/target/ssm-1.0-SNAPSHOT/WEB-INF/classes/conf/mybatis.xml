<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!--设置别名-->
    <typeAliases>
        <!--name:实体类所在的包名-->
        <package name="com/czf/domain"/>
    </typeAliases>
    <mappers>
        <!--指定sql映射文件的位置，从类路径target/classes开始-->
        <!--<mapper resource="com/czf/dao/StudentDao"/>-->
        <!--或者直接用mapper文件所在包名-->
        <package name="com.czf.dao"/>
    </mappers>
</configuration>